  <h1 style="margin: auto;">Welcome to Digital Course File</h1>
  <p style="font-size: 20px; padding-top: 20px;">Please select the desired Course</p> 
</div>

  
<div class="container">
  <div class="row row-cols-3">
  <% user.courseList.forEach(function(course) {%>
  <div class="col">
	<div class="card mt-5" style="width: 18rem; height: 10rm;">
      <div class="card-body m-auto">
          <a class="nav-link" href="/courses/dashboard/<%=course._id%>" class="card-title" style="padding-top: 50%; padding-bottom: 50%;">
            <span class="badge bg-secondary">5</span></h4>
            <h5 class="card-title p-auto"><%=course.code%></h5>
          </a>
      </div>
  </div>
  </div>
  <% }); %>
  </div>


