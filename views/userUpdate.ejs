<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0" crossorigin="anonymous">

        <title>Faculty Update Page</title>
    </head>
    
    <body>
        <div class="container">
            <form action="/admin/user/edit/<%= user._id %>" method="POST">
                <div><%= user.username %></div>
                <div><%= user.name %></div>
                <div class="form-check">
                    <% courses.forEach(function(course){ %>
                        <% if(user.courseList.includes(course._id)){ %>
                            <div>
                            <input class="form-check-input" type="checkbox"  id="flexCheckDefault" value="<%= course._id %>" name="newcourseList" checked>
                            <label class="form-check-label" for="flexCheckDefault"><%= course.courseName %></label>
                            </div>
                        <% } else{ %>
                            <div>
                            <input class="form-check-input" type="checkbox"  id="flexCheckDefault" value="<%= course._id %>" name="newcourseList">
                            <label class="form-check-label" for="flexCheckDefault"><%= course.courseName %></label>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </body>
</html>