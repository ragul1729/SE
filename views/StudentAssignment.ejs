  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

    <title>Student Assignment Page</title>
  </head>
  <body>
    <table class="table table-striped">
        <tr>
            <th scope="col">File Name</th>
            <th scope="col">Uploaded By</th>
            <th scope="col">Uploaded Date</th>
            <th scope="col"></th>
        </tr>
        <tr>
            <% if(assignments){ %>
                <% assignments.forEach(function(assignment){ %>
                    <tr>
                        <td><a href="/<%= assignment._id %>>/assignment/download"><%= assignment.fileData.filename.split("-")[0] %></a></td>
                        <td><%= assignment.UploadedBy.name %></td>
                        <td><%= assignment.UploadedDate %></td>
                        <td>
                            <form action="/<%= course_id %>/<%= assignment._id %>/assignment/upload" method="POST" enctype="multipart/form-data">
                                <input type="file" class="form-control" id="myfile" name='newfile'>
                                <input type="submit" class="btn btn-primary">
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } %>
        </tr>

    </table>



